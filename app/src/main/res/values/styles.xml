<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <style name="Widget.Soulpicks.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Soulpicks.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch" />

    <style name="Widget.Soulpicks.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox" />

    <style name="Widget.Soulpicks.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Soulpicks.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Soulpicks.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Soulpicks.OutlinedButton.Checkable">
        <item name="android:textColor">@color/color_materialbuttoncheckable_text_selector</item>
        <item name="iconTint">@color/color_materialbuttoncheckable_text_selector</item>
        <item name="strokeColor">@color/color_materialbuttoncheckable_text_selector</item>
        <item name="backgroundTint">@color/color_materialbuttoncheckable_background_selector</item>
        <item name="rippleColor">@color/color_materialbuttoncheckable_ripple_selector</item>
    </style>


    <style name="Widget.Soulpicks.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Soulpicks.TabLayout</item>
    </style>

    <style name="TextAppearance.Soulpicks.TabLayout" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>


    <style name="Widget.Soulpicks.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="chipIconSize">16dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconTint">@color/color_chip_text</item>
        <item name="chipStrokeColor">@color/color_chip_stroke</item>
        <item name="chipBackgroundColor">@color/color_chip</item>
        <item name="enforceTextAppearance">true</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/color_chip_text</item>
        <item name="iconStartPadding">8dp</item>
        <item name="iconEndPadding">-4dp</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Widget.Soulpicks.Chip.Square">
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="Widget.Soulpicks.Chip.Button">
        <item name="android:textAppearance">@style/TextAppearance.Soulpicks.Chip.Button</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipIconTint">@color/iconColor</item>
        <item name="android:checkable">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Soulpicks.Chip.Green">
        <item name="chipBackgroundColor">@color/secondary</item>
        <item name="chipStrokeColor">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconSize">12dp</item>
        <item name="closeIconTint">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="Widget.Soulpicks.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:iconifiedByDefault">false</item>
        <item name="iconifiedByDefault">false</item>
        <item name="measureWithLargestChild">true</item>
        <item name="android:gravity">left</item>
    </style>


    <!-- Bottom Navigation -->
    <style name="Widget.Soulpicks.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/color_bottomnav_text</item>
        <item name="itemIconTint">@color/color_bottomnav_icons</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.Soulpicks.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>-->
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>


    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>


    <!-- CardView -->

    <style name="Widget.Soulpicks.CardView" parent="Widget.MaterialComponents.CardView">

    </style>

    <!--Navigation Drawer-->
    <style name="Widget.Soulpicks.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>


    <!-- CUSTOM FAB STYLING -->
    <style name="Widget.Soulpicks.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/surface</item>
        <item name="iconTint">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.Soulpicks.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/surface</item>
        <item name="tint">@color/primary</item>
    </style>

    <style name="Widget.Soulpicks.AdvancedFabMenuStyle" parent="">
        <item name="menu_do_reveal">true</item>
        <item name="menu_progress_width">2dp</item>
        <item name="menu_icon">@drawable/ic_fabmenu_icon</item>
        <item name="menu_progress_color">@color/primary</item>
        <item name="menu_progress_showBackground">false</item>
        <item name="menu_reveal_color">@color/gray</item>
        <item name="menu_colorNormal">@color/white</item>
        <item name="menu_colorPressed">@color/steel</item>
        <item name="menu_colorRipple">@color/primary200</item>
        <item name="menu_radial_layoutAngle">180</item>
        <item name="menu_radial_angleOffset">-90</item>
        <item name="menu_showShadow">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.Soulpicks.AdvancedFabMenuStyle.Linear">
        <item name="menu_backgroundColor">#66000000</item>
    </style>

    <style name="Widget.Soulpicks.AdvancedFabStyle" parent="">
        <item name="fab_colorNormal">@android:color/white</item>
        <item name="fab_colorPressed">@color/white</item>
        <item name="fab_colorRipple">@color/gray</item>
        <item name="fab_progress_width">3dp</item>
        <item name="fab_progress_color">@color/primary</item>
        <item name="fab_progress_showBackground">false</item>
        <item name="fab_showShadow">false</item>
    </style>

    <!-- DIALOGS -->

    <style name="Theme.Soulpicks.SoulpicksAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/TextAppearance.Soulpicks.AlertDialog.Title
        </item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Soulpicks.AlertDialog.Text
        </item>
    </style>

</resources>
